{
    "manifest_version": 2,

    "name": "Visit Count",
    "description": "A count on number of visits done by you on a particular website!",
    "version": "1.0",
    "icons": {"128": "icon.png"},

    "browser_action": {
        "default_icon": "icon.png"
    },

    "content_scripts": [
        {
          "matches": ["http://*/*", "https://*/*"],
          "js": ["jquery-2.2.1.min.js", "popup.js"],
          "run_at": "document_end"
        }
    ],
    "background": {
        "scripts": ["background.js"]
    },

    "permissions": [
        "tabs",
        "activeTab",
        "webNavigation",
        "storage"
    ]
}
